---
import avatarImage from "../assets/avatar.png";
---

<header>
  <nav>
    <a href="/" class="avatar">
      <img src={avatarImage.src} alt="Enea Xharja" width={48} height={48} />

      <div class="avatar-text">
        <span>Enea Xharja</span>
        <small>Software Engineer</small>
      </div>
    </a>

    <a href="/archives" class="btn">Archives</a>
  </nav>
</header>

<style>
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: var(--space-m);
    padding-bottom: var(--space-m);
  }

  .avatar {
    display: flex;
    align-items: center;
    text-decoration: none;
    gap: var(--space-2xs);
  }

  img {
    border-radius: 50%;
    border: 1px solid var(--color-grey);
  }

  .avatar-text {
    display: flex;
    flex-direction: column;

    span {
      font-size: var(--step-0);
      color: var(--color-yellow-light);
    }
  }
</style>
