---
import { Image } from "astro:assets";

import avatarImage from "../assets/avatar.png";
---

<header>
  <nav>
    <a href="/" class="avatar">
      <Image
        src={avatarImage}
        alt="Enea Xharja"
        class="avatar-img"
        loading="eager"
      />

      <div class="avatar-text">
        <span>Enea Xharja</span>
        <small>Software Engineer</small>
      </div>
    </a>

    <a href="/archives" class="btn">Archives</a>
  </nav>
</header>

<style>
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: var(--space-m);
    padding-bottom: var(--space-m);
  }

  .avatar {
    display: flex;
    align-items: center;
    text-decoration: none;
    gap: var(--space-2xs);
  }

  .avatar-img {
    border-radius: 50%;
    border: 1px solid var(--color-grey);
    width: 48px;
    height: 48px;
  }

  .avatar-text {
    display: flex;
    flex-direction: column;

    span {
      font-size: var(--step-0);
      color: var(--color-yellow-light);
    }
  }
</style>
